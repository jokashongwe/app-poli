{% if form %}

    {{ form_start(form) }}

        <div class="mb-6">
            {{ form_label(form.accreditation, 'Accreditation CENI', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300'}}) }}
            {{ form_widget(form.accreditation, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700'}}) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.membre, 'Membre ', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300'}}) }}
            {{ form_widget(form.membre, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700'}}) }}
        </div>

        <div class="grid grid-cols-3 gap-4" >
            <div class="mb-6">
                {{ form_label(form.bureauVote, 'BureauVote ', {'label_attr': {'class': 'inline-block text-sm text-gray-600'}}) }}
                {{ form_widget(form.bureauVote, {'attr': {'class': 'block w-full rounded-sm cursor-pointer focus:outline-none'}}) }}
            </div>
        </div>
        <div class="grid grid-cols-3 gap-4" >
            <div class="mb-6">
                {{ form_label(form.circonscription, 'Circonscription ', {'label_attr': {'class': 'inline-block text-sm text-gray-600'}}) }}
                {{ form_widget(form.circonscription, {'attr': {'class': 'block w-full rounded-sm cursor-pointer focus:outline-none'}}) }}
            </div>
        </div>
        <div class="grid grid-cols-3 gap-4" >
            <div class="mb-6">
                {{ form_label(form.candidat, 'Candidat ', {'label_attr': {'class': 'inline-block text-sm text-gray-600'}}) }}
                {{ form_widget(form.candidat, {'attr': {'class': 'block w-full rounded-sm cursor-pointer focus:outline-none'}}) }}
            </div>
        </div>



        {{ form_widget(form.save, {'attr': { 'id': 'diffusion_save', 'class': 'py-2 px-5 mr-2 mb-2 text-sm font-medium text-white focus:outline-none bg-green-700 rounded-sm border border-gray-200 hover:bg-green-200 hover:text-gray-800 focus:z-10 focus:ring-4 focus:ring-gray-200'}}) }}
        <button id="closemodal" class="mt-5 py-3 px-5 mr-2 mb-2 text-sm font-medium text-white focus:outline-none bg-yellow-500 rounded-sm border hover:bg-yellow-600 hover:text-gray-800 focus:z-10 focus:ring-4 focus:ring-gray-200" type="button" data-modal-toggle="defaultModal">
			Annuler
		</button>
        {% for message in app.flashes('notice') %}
            <div style="font-size: 12px; color: red" >
                {{ message }}
            </div>
        {% endfor %}

        {{ form_end(form) }}

{% endif %}