<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}{% endblock %}
		</title>
		<link rel="icon" href="{{ asset('images/logo_vote.png') }}">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
		<link rel="stylesheet" href="https://unpkg.com/tailwindcss@2.2.19/dist/tailwind.min.css"/>
        <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
        {% block stylesheet %} {% endblock %}
    </head>
    <style>
		@import url('https://fonts.googleapis.com/css?family=Quicksand&display=swap');
        body{
            font-family: 'Muli', sans-serif;
        }
        span{
            margin: 4px;
        }
    </style>
	<body>
        <!-- NAV BAR -->
        <div class="flex" >
            <div id="menu" class="md:flex-none w-full md:w-60 md:h-full shadow-lg bg-gray-600 hidden md:block z-0 relative md:absolute">
                <ul class="relative ">
                    <li class="relative">
                        <a href="{{ path('dashboard')}} " class="flex items-center font-semibold text-sm py-4 bg-gray-300 px-6 h-12 text-black" >
                        Portail d'Administration
                        </a>
                    </li>
                    {% if is_granted("ROLE_MEMBRE") or is_granted("ROLE_COTISATION") %}
                        <li class="relative">
                            <a href="{{ path('membre_new') }}"  class="flex items-center text-sm py-4 px-6 h-12 overflow-hidden text-gray-300 text-ellipsis whitespace-nowrap  hover:text-gray-900 hover:bg-gray-100 transition duration-300 ease-in-out" href="#!" data-mdb-ripple="true" data-mdb-ripple-color="dark">
                                <i class="fas fa-users fa-1x fa-fw"></i>
                                <span class="pl-2">Gestion des Membres</span>
                            </a>
                        </li>
                    {% endif %}

                    {% if is_granted("ROLE_ADMIN") %}
                        <li class="relative">
                            <a href="{{ path('federation_new')}} " class="flex items-center text-sm py-4 px-6 h-12 overflow-hidden text-gray-300 text-ellipsis whitespace-nowrap  hover:text-gray-900 hover:bg-gray-100 transition duration-300 ease-in-out" href="#!" data-mdb-ripple="true" data-mdb-ripple-color="dark">
                                <i class="fas fa-building fa-1x fa-fw"></i>
                                <span class="pl-2">Gestion des Fédérations</span>
                            </a>
                        </li>
                        <li class="relative">
                            <a href="{{ path("user_show") }}" class="flex items-center text-sm py-4 px-6 h-12 overflow-hidden text-gray-300 text-ellipsis whitespace-nowrap  hover:text-gray-900 hover:bg-gray-100 transition duration-300 ease-in-out" href="#!" data-mdb-ripple="true" data-mdb-ripple-color="dark">
                                <i class="fas fa-cog fa-1x fa-fw"></i>
                                <span class="pl-2"> Gestion des Utilisateurs</span>
                            </a>
                        </li>
                    {% endif %}

                    {% if is_granted("ROLE_DIFFUSION") or is_granted("ROLE_ADMIN") %}
                    <li class="relative">
                        <a href="{{ path('diffusion') }}" class="flex items-center text-sm py-4 px-6 h-12 overflow-hidden text-gray-300 text-ellipsis whitespace-nowrap  hover:text-gray-900 hover:bg-gray-100 transition duration-300 ease-in-out" href="#!" data-mdb-ripple="true" data-mdb-ripple-color="dark">
                            <i class="fas fa-bullhorn fa-1x fa-fw"></i>
                            <span class="pl-2"> Gestion des Diffusions</span>
                        </a>
                    </li>

                    {% endif %}
                    <hr/>
                    {% if is_granted("ROLE_ELECTORAL") or is_granted("ROLE_ADMIN") %}
                    <li class="relative">
                        <a href="{{ path('app_circonscription') }}" class="flex items-center text-sm py-4 px-6 h-12 overflow-hidden text-gray-300 text-ellipsis whitespace-nowrap  hover:text-gray-900 hover:bg-gray-100 transition duration-300 ease-in-out" href="#!" data-mdb-ripple="true" data-mdb-ripple-color="dark">
                            <i class="fas fa-map-marker fa-1x fa-fw"></i>
                            <span class="pl-2"> Liste des circonscriptions</span>
                        </a>
                    </li>

                    {% endif %}
                    {% if is_granted("ROLE_ELECTORAL") or is_granted("ROLE_ADMIN") %}
                        <li class="relative">
                            <a href="{{ path('app_bureau_vote') }}" class="flex items-center text-sm py-4 px-6 h-12 overflow-hidden text-gray-300 text-ellipsis whitespace-nowrap  hover:text-gray-900 hover:bg-gray-100 transition duration-300 ease-in-out" href="#!" data-mdb-ripple="true" data-mdb-ripple-color="dark">
                                <i class="fas fa-warehouse fa-1x fa-fw"></i>
                                <span class="pl-2"> Liste des Bureaux de Vote</span>
                            </a>
                        </li>
                    {% endif %}
                    {% if is_granted("ROLE_ELECTORAL") or is_granted("ROLE_ADMIN") %}
                        <li class="relative">
                            <a href="{{ path('app_temoin') }}" class="flex items-center text-sm py-4 px-6 h-12 overflow-hidden text-gray-300 text-ellipsis whitespace-nowrap  hover:text-gray-900 hover:bg-gray-100 transition duration-300 ease-in-out" href="#!" data-mdb-ripple="true" data-mdb-ripple-color="dark">
                                <i class="fas fa-user-tag fa-1x fa-fw"></i>
                                <span class="pl-2"> Gestion des Témoins</span>
                            </a>
                        </li>
                    {% endif %}
                    {% if is_granted("ROLE_ELECTORAL") or is_granted("ROLE_ADMIN") %}
                        <li class="relative">
                            <a href="{{ path('app_candidat') }}" class="flex items-center text-sm py-4 px-6 h-12 overflow-hidden text-gray-300 text-ellipsis whitespace-nowrap  hover:text-gray-900 hover:bg-gray-100 transition duration-300 ease-in-out" href="#!" data-mdb-ripple="true" data-mdb-ripple-color="dark">
                                <i class="fas fa-user-shield fa-1x fa-fw"></i>
                                <span class="pl-2"> Gestion des Candidats</span>
                            </a>
                        </li>
                    {% endif %}
                    <li class="relative">
                        <a class="flex items-center text-sm py-4 px-6 h-12 overflow-hidden text-gray-300 text-ellipsis whitespace-nowrap  hover:text-gray-900 hover:bg-gray-100 transition duration-300 ease-in-out" href="{{ path('logout') }}" data-mdb-ripple="true" data-mdb-ripple-color="dark">
                            <i class="fas fa-door-open fa-1x fa-fw"></i>
                            <span class="pl-2">Déconnexion</span>
                        </a>
                    </li>
                    <li class="relative">
                        <p class="flex items-center text-xs py-4 px-6 h-10 font-light text-gray-300">
                        &copy; 2023
                        </p>
                    </li>
                </ul>
            </div>
            <div class="flex-initial md:pl-64 md:pt-3 md:pr-3 mb-5 sm:pl-3 w-full" >
                <div class="grid grid-cols-4 block md:hidden">
                    <button id="showMenu" class="bg-gray-100 m-3 rounded-md text-gray-800 shadow-lg p-4" >
                        <i class="fas fa-list fa-1x fa-fw"></i>
                    </button>
                    <div class="col-span-3 flex items-center" >
                        <h2 class="text-xl text-gray-700" >Portail Central</h1>
                    </div>
                </div>
                <div id="content" class="z-10 relative" >
                    {% block body %}
            
                    {% endblock %}
                </div>
            </div>
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
        <script>
            const menuBTN = document.getElementById("showMenu");
            const content = document.getElementById("content");
            window.menuShown = false;
            
            menuBTN.addEventListener('click', function(e){
                //console.log('btn')
                let elt = document.getElementById("menu");
                if(!window.menuShown){  
                    elt.style.display = 'block';
                    window.menuShown = true;
                }else {
                    elt.style.display = 'none';
                    window.menuShown = false;
                }
            });
            
        </script>
	</body>
</html>