{% extends 'dash.html.twig' %}

{% block stylesheet %}
<link href="https://cdn.jsdelivr.net/npm/tom-select/dist/css/tom-select.css" rel="stylesheet"/>
{% endblock %}
{% block body %}

    <div class="container" >
        <h3 class="mb-3 text-md font-200 tracking-tight uppercase text-gray-900 dark:text-white  mt-3">Diffusion
        </h3>

        {{ form_start(form) }}

        <div class="mb-6">
            {{ form_label(form.titre, 'Titre ', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300'}}) }}
            {{ form_widget(form.titre, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700'}}) }}
        </div>

        <div class="mb-6">
            {{ form_label(form.contenu, 'Contenu ', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300'}}) }}
            {{ form_widget(form.contenu, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700'}}) }}
        </div>

        <div class="grid grid-cols-3 gap-4" >
            <div class="mb-6">
                {{ form_label(form.province, 'Province ', {'label_attr': {'class': 'inline-block text-sm text-gray-600'}}) }}
                {{ form_widget(form.province, {'attr': {'class': 'block w-full rounded-sm cursor-pointer focus:outline-none'}}) }}
            </div>

            <div class="mb-6">
                {{ form_label(form.federation, 'Federation ', {'label_attr': {'class': 'inline-block text-sm text-gray-600'}}) }}
                {{ form_widget(form.federation, {'attr': {'class': 'block w-full rounded-sm cursor-pointer focus:outline-none'}}) }}
            </div>
        </div>



        {{ form_widget(form.save, {'attr': {'class': 'py-2 px-5 mr-2 mb-2 text-sm font-medium text-white focus:outline-none bg-green-700 rounded-sm border border-gray-200 hover:bg-green-200 hover:text-gray-800 focus:z-10 focus:ring-4 focus:ring-gray-200'}}) }}

        {% for message in app.flashes('notice') %}
            <div style="font-size: 12px; color: red" >
                {{ message }}
            </div>
        {% endfor %}

        {{ form_end(form) }}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/tom-select/dist/js/tom-select.complete.min.js"></script>
    <script>
        new TomSelect('#diffusion_province', {
            maxItems: 5,
        });
        new TomSelect('#diffusion_federation', {
            maxItems: 5,
        });
    </script>

{% endblock %}
