{% extends 'loginbase.html.twig' %}


{% block stylesheets %}

	<style>
	.gradient-custom-2 {
			/* fallback for old browsers */
        background-image: url("/images/banner.png");
        vertical-align: center;
        background-size: contain;
        background-repeat: no-repeat;
        background-blend-mode: multiply;
	}

    .text-small{
      font-size: 14px;
      font-weight: 300;
    }

    .error{
      color: red;
      font-size: 14px;
      font-weight: 300;
    }

	@media (min-width: 768px) {
		.gradient-form {
			height: 100vh !important;
		}
        .gradient-custom-2 {
			border-top-right-radius: .3rem;
			border-bottom-right-radius: .3rem;
		}
	}
    @media (max-width: 768px) {
		.gradient-custom-2 {
            object-fit: cover;
			height: 10rem;
		}
        .login-space{
            margin-top: -3rem !important;
        }
	}
	</style>

{% endblock %}
{% block body %}
<section class="h-100 gradient-form" style="background-color: #e3f1fc;">
  <div class="h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-12 h-100">
        <div class="card rounded-3 text-black h-100">
          <div class="row g-0 h-100">
            <div class="col-lg-6 d-flex align-items-center pb-5 gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                
              </div>
            </div>
            <div class="col-lg-6 login-space">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-black mt-5 mb-5 pb-1">
                  <h1>Marketa<span style="font-weight: 400 !important; font-size: 13px; margin-left:5px"></span></h1>
                  <p class="text-small">Confirmation</p>
                </div>

                <div class="text-black mt-5 mb-5 pb-1">
                  <p class="text-small">
                    Votre compte a été correctement crée. 
                    <a href="{{ path('login') }}" >Se connecter</a>
                    </p>
                </div>

              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
