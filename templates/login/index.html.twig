{% extends 'loginbase.html.twig' %}


{% block stylesheets %}

	<style>
		.gradient-custom-2 {
			/* fallback for old browsers */
			background: rgb(10, 10,10, 0.6);
      background-image: url("/images/banner.jpeg");
      background-size: cover;
      background-repeat: no-repeat;
      background-blend-mode: multiply;
		}

    .text-small{
      font-size: 14px;
      font-weight: 300;
    }

    .error{
      color: red;
      font-size: 14px;
      font-weight: 300;
    }

		@media (min-width: 768px) {
			.gradient-form {
				height: 100vh !important;
			}
		}
		@media (min-width: 769px) {
			.gradient-custom-2 {
				border-top-right-radius: .3rem;
				border-bottom-right-radius: .3rem;
			}
		}
    @media (max-width: 768px) {
			.gradient-custom-2 {
				height: 10rem;
			}
      .login-space{
        margin-top: -3rem !important;
      }
		}
	</style>

{% endblock %}

{% block title %} Portail Central {% endblock %}

{% block body %}
<section class="h-100 gradient-form" style="background-color: #e3f1fc;">
  <div class="h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-12 h-100">
        <div class="card rounded-3 text-black h-100">
          <div class="row g-0 h-100">
            <div class="col-lg-6 d-flex align-items-center pb-5 gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                
              </div>
            </div>
            <div class="col-lg-6 login-space">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-black mt-5 mb-5 pb-1">
                  <h1>Connexion</h1>
                  <p class="text-small" >Gérer tout votre parcours éléctoral en quelques cliques de la mobilisation au échéances éléctoral</p>
                </div>

                <form action="{{ path('login') }}" method="post" >
                  

                  <div class="form-outline mb-4">
                    <input type="text" id="form2Example11" class="form-control"
                      placeholder="Nom d'utilisateur ou téléphone" name="_username" value="{{ last_username }}" />
                    <label class="form-label" for="form2Example11">Utilisateur</label>
                  </div>

                  <div class="form-outline mb-4">
                    <input type="password" name="_password" id="form2Example22" class="form-control" />
                    <label class="form-label" for="form2Example22">Mot de passe</label>
                  </div>
                  {% if error %}
                    <p class="error" >{{ error }}</p>
                  {% endif %}
                  <div class="text-center pt-1 mb-5 pb-1">
                    <button class="btn btn-primary btn-block fa-lg py-3 mb-3" type="submit">Se Connecter</button>
                    <a class="text-muted" href="#!">Mot de passe oublié ? Contactez l'administrateur</a>
                  </div>
                  
                  <input type="hidden" name="_target_path" value="{{ path('dashboard') }}"/>

				    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                </form>

              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
