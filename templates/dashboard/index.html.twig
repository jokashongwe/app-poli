{% extends 'dash.html.twig' %}

{% block title %}Administration
{% endblock %}

{% block body %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        .chartbox{
            padding: 5px;
        }

    </style>
    

        <div class="container">
            <div class="grid md:grid-cols-3 md:gap-1 sm:grid-cols-1 sm:gap-0 mb-5">

                <a href="#" class="block p-6  bg-blue-500 rounded border border-gray-200 shadow-md hover:bg-blue-700 dark:border-gray-700 dark:hover:bg-gray-700">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-white dark:text-white">Membres</h5>
                    <div class="grid grid-cols-2 gap-1">
                        <i class="fas fa-user-plus fa-2x fa-fw text-white"></i>
                        <p class="font-bold text-2xl text-white"> {{ membreCount }} </p>
                    </div>

                </a>


                <a href="{{ path('federation_new') }}" class="block p-6  bg-yellow-500 rounded border border-gray-200 shadow-md hover:bg-yellow-700 dark:border-gray-700 dark:hover:bg-gray-700">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-white dark:text-white">Fédérations</h5>
                    <div class="grid grid-cols-2 gap-1">
                        <i class="fas fa-building fa-2x fa-fw text-white"></i>
                        <p class="font-bold text-2xl text-white"> {{ federations }} </p>
                    </div>

                </a>


                <a href="#" class="block p-6  bg-green-500  rounded border border-gray-200 shadow-md hover:bg-green-700 dark:border-gray-700 dark:hover:bg-gray-700">
                    <h5 class="mb-2 text-2xl font-bold tracking-tight text-white dark:text-white">Cotisations Annuelle</h5>
                    <div class="grid grid-cols-2 gap-1">
                        <i class="fas fa-wallet fa-2x fa-fw text-white"></i>
                        <p class="font-bold text-2xl text-white">{{ totalMontant }} Fc</p>
                    </div>
                </a>

            </div>

            <div class="grid md:grid-cols-3 md:gap-2 sm:grid-cols-1 sm:gap-0" >
                <div class="chartbox shadow-md col-span-2" >
                    <canvas id="federationchart"></canvas>
                </div>
                <div class="chartbox shadow-md barcart" >
                    <canvas id="genderchart"></canvas>
                </div>
            </div>
            <h3 class="mb-3 text-md font-200 tracking-tight text-gray-900 dark:text-white uppercase mt-3">5 - Derniers membres inscrits
            </h3>
            <div class="relative overflow-x-auto shadow-md border">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-300 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-6 py-3">
                                Nom
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Postnom
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Prénom
                            </th>
                            <th scope="col" class="px-6 py-3">
                                Fédération
                            </th>
                            <th scope="col" class="px-6 py-3">
                                <span class="sr-only">Infos</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for membre in membres %}
                            <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                                
                                <td class="px-6 py-4">
                                    {{ membre.nom }}
                                </td>
                                <td class="px-6 py-4">
                                    {{ membre.postnom }}
                                </td>
                                <td class="px-6 py-4">
                                    {{ membre.prenom }}
                                </td>
                                
                                {% if membre.federation %}
                                    <td class="px-6 py-4 text-right">
                                        {{ membre.nom }}
                                    </td>    
                                {% endif %}
                                
                            </tr> 
                        {% endfor %}
                    </tbody>
                </table>
            </div>

         </div>

    

    <script>
        const data = {
            labels: [
                'Femme',
                'Homme'
            ],
            datasets: [{
                label: 'Homme/Femme',
                data: {{ membreValuesChart2 }},
                backgroundColor: [
                'rgb(255, 99, 132)',
                'rgb(54, 162, 235)'
                ],
                hoverOffset: 2,
                responsive:true,
            }]
        };

        const config = {
            type: 'pie',
            data: data,
            options:{
                aspectRatio: 1
            }
        };
                
        const myChart = new Chart(
            document.getElementById('genderchart'),
            config
        );

    </script>

    <script>
        let labels2 = '{{ membreLabels }}';
        labels2 = labels2.replaceAll("&quot;", "\"");
        labels2 = JSON.parse(labels2);

        const values = {{ membreValues }};
        const data2 = {
            labels: labels2,
            datasets: [{
                label: 'Membres par Fédération',
                data: values,
                backgroundColor: [
                'rgba(255, 99, 132, 0.6)',
                'rgba(255, 159, 64, 0.6)',
                'rgba(200, 200, 86, 0.6)',
                'rgba(75, 192, 192, 0.6)',
                'rgba(54, 162, 235, 0.6)',
                'rgba(153, 102, 255, 0.6)',
                'rgba(201, 203, 207, 0.6)'
                ],
                borderColor: [
                'rgb(255, 99, 132)',
                'rgb(255, 159, 64)',
                'rgb(200, 205, 86)',
                'rgb(75, 192, 192)',
                'rgb(54, 162, 235)',
                'rgb(153, 102, 255)',
                'rgb(201, 203, 207)'
                ],
                borderWidth: 1,
            }]
        };

        const config2 = {
            type: 'bar',
            data: data2,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                 responsive:true,
                  aspectRatio:1
            },
        };

        const federation = new Chart(
            document.getElementById('federationchart'),
            config2
        );

    </script>


{% endblock %}
